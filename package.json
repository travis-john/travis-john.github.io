{
  "name": "travis-john.github.io",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "bundle-js": "^1.0.3",
    "react": "^16.13.1",
    "react-bootstrap": "^1.0.0",
    "react-codepen-embed": "^1.0.1",
    "react-dom": "^16.13.1",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.4.1"
  },
  "scripts": {
    "scss": "node-sass -o public/assets/css src/scss/styles.scss",
    "concat:js": "concat -o src/js/main.js src/js/a11y.js src/js/contactMe.js src/js/jqBootstrapValidation.js src/js/smoothScroll.js",
    "cssmin": "cleancss -o public/assets/css/styles.min.css public/assets/css/styles.css",
    "uglify": "uglifyjs -o public/assets/js/main.min.js src/js/main.js",
    "create:css": "npm run scss && npm run cssmin",
    "create:js": "npm run concat:js && npm run uglify",
    "watch:css": "onchange 'src/scss/*.scss' -- npm run create:css",
    "watch:js": "onchange 'src/js/*.js' -- npm run create:js",
    "watch": "npm run watch:js && watch:css",
    "start-js": "react-scripts start",
    "start": "npm-run-all -p create:css create:js start-js",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "bootstrap": "^4.4.1",
    "clean-css-cli": "^4.3.0",
    "concat": "^1.0.3",
    "node-sass": "^4.13.1",
    "npm-run-all": "^4.1.5",
    "onchange": "^6.1.0",
    "uglify-js": "^3.8.0"
  },
  "homepage": "http://travis-john.github.io/"
}
